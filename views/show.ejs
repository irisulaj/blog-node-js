<%- include('components/header.ejs') %>

<% getPost.forEach((post) =>{ %>
    <section id="show">
        <div class="inside">
            <div class="image">
                <img src="<%=post.image_url%>" alt="image">
            </div>
            <div class="contents">
                <div class="title"><%=post.title%></div>
                <p class="description"><%=post.content%></p>
                <div class="show-btn">
                    <a class="delete-btn"href="/delete/">Delete</a>
                    <a class="edit-btn" href="/edit/<%=post.post_id%>">Edit</a>
                </div>
             
            </div>
        </div>
    </section>


    <% })%>


<%- include('components/footer.ejs') %>