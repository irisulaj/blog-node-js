
<%- include('components/header.ejs') %>
<div class="create-link-container">
    <a  class="create-link" href="/create"> create new blog</a>
</div>
<% getPosts.forEach((post) =>{ %>



    <section id="all-contents">
    <div class="inside">
        <div class="title"><%=post.title%></div>
        <div class="image-container">
            <img class="image" src="<%=post.image_url%>" alt="image">
        </div> 
        <span></span>
     
        <div class="btn-container">
            <a class="btn" href="show/<%=post.post_id%>">Show more</a>
        </div>
        <p class=""><%=post.created_at%></p>
        <div class="hr"></div>
    </div>
    
  
</section>
<% })%>



