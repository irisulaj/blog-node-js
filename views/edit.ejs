<%- include('components/header.ejs') %>


<% getPost.forEach((post) =>{ %>
<section  id="create">
    <div class="heading">
        <h1>Create new blog</h1>
    </div>
    <div class="inside">
        <form action="/edit/:<%=post.post_id%>" method="POST">
            <input name='title' value='<%=post.title%>'  type="text">
            <input name='image_url' value='<%=post.image_url%>' type="text">
            <textarea name="content" id="" cols="100" rows="10"><%=post.content%></textarea>
            <div class="btn-container">
                <button class="btn">Update</button>
            </div>
        </form>
    </div>


</section>


<% })%>


<%- include('components/footer.ejs') %>